<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GenHub.Features.Tools.ViewModels"
             xmlns:models="using:GenHub.Core.Models.Providers"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="500"
             x:Class="GenHub.Features.Tools.Views.PublisherStudio.ContentLibraryView"
             x:DataType="vm:ContentLibraryViewModel"
             x:Name="RootView">


    <UserControl.Styles>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#15FFFFFF"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#25FFFFFF"/>
        </Style>
        <!-- Selection indicator -->
        <Style Selector="ListBoxItem:selected Border#CardRoot">
            <Setter Property="BorderBrush" Value="#AA00FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#15AA00FF"/>
        </Style>

        <Style Selector="Button.glass-icon-btn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.glass-icon-btn:pointerover">
            <Setter Property="Background" Value="#20FFFFFF"/>
        </Style>

        <Style Selector="Button.accent-glass-btn">
             <Setter Property="Background" Value="#15AA00FF"/>
             <Setter Property="BorderBrush" Value="#40AA00FF"/>
             <Setter Property="BorderThickness" Value="1"/>
             <Setter Property="CornerRadius" Value="6"/>
             <Setter Property="Padding" Value="12,8"/>
        </Style>
        <Style Selector="Button.accent-glass-btn:pointerover">
             <Setter Property="Background" Value="#25AA00FF"/>
             <Setter Property="BorderBrush" Value="#60AA00FF"/>
        </Style>
    </UserControl.Styles>

    <Grid ColumnDefinitions="320,*" Margin="0">
        <!-- Content List Panel -->
        <Border Background="#10000000"
                BorderThickness="0,0,1,0"
                BorderBrush="#15FFFFFF">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Header -->
                <Border Grid.Row="0"
                        Padding="20,16"
                        BorderThickness="0,0,0,1"
                        BorderBrush="#15FFFFFF">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Text="Content Items"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   FontSize="16"/>
                        <Button Grid.Column="1"
                                Command="{Binding AddContentCommand}"
                                ToolTip.Tip="Add New Content"
                                Classes="glass-icon-btn">
                            <PathIcon Data="{StaticResource AddIcon}" Width="16" Height="16" Foreground="#AA00FF"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Content List -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding ContentItems}"
                         SelectedItem="{Binding SelectedContent}"
                         Padding="16"
                         Background="Transparent">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="models:CatalogContentItem">
                            <Border Name="CardRoot"
                                    Padding="12"
                                    CornerRadius="8"
                                    BorderThickness="1"
                                    BorderBrush="#10FFFFFF"
                                    Background="#05FFFFFF">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Border Width="40" Height="40"
                                            CornerRadius="8"
                                            Background="{DynamicResource PrimaryGradientBrush}"
                                            Margin="0,0,16,0"
                                            Opacity="0.8">
                                        <TextBlock Text="ðŸŽ®"
                                                   FontSize="20"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" Spacing="4" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock FontSize="12" Foreground="#AAAAAA">
                                            <Run Text="{Binding ContentType}"/>
                                            <Run Text=" â€¢ "/>
                                            <Run Text="{Binding Releases.Count}"/>
                                            <Run Text=" releases"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Empty State -->
                <StackPanel Grid.Row="1"
                            IsVisible="{Binding !ContentItems.Count}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="16">
                    <TextBlock Text="No content items"
                               FontSize="14"
                               Opacity="0.5"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <Button Command="{Binding AddContentCommand}"
                            HorizontalAlignment="Center"
                            Background="{DynamicResource PrimaryGradientBrush}"
                            CornerRadius="10"
                            Padding="24,12">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <PathIcon Data="{StaticResource AddIcon}" Width="16" Height="16" Foreground="White"/>
                            <TextBlock Text="Add Content" Foreground="White" FontWeight="Bold" FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Details Panel -->
        <ScrollViewer Grid.Column="1"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <ContentControl Content="{Binding SelectedContent}">
                <ContentControl.ContentTemplate>
                    <DataTemplate DataType="models:CatalogContentItem">
                        <StackPanel Margin="32" Spacing="24">
                            <!-- Content Header -->
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="{Binding Name, FallbackValue=''}"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="White">
                                        <TextBlock.Effect>
                                            <DropShadowEffect Color="#AA000000" BlurRadius="12" OffsetX="2" OffsetY="2" Opacity="0.4"/>
                                        </TextBlock.Effect>
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                         <Border Background="{DynamicResource PrimaryGradientBrush}"
                                                 CornerRadius="6"
                                                 Padding="12,5">
                                             <TextBlock Text="{Binding ContentType, FallbackValue=''}"
                                                        FontSize="12"
                                                        FontWeight="Bold"
                                                        Foreground="White"/>
                                         </Border>
                                        <Border Background="#20FFFFFF"
                                                CornerRadius="6"
                                                Padding="10,4">
                                             <TextBlock Text="{Binding TargetGame, FallbackValue=''}"
                                                        FontSize="12"
                                                        Foreground="#DDDDDD"
                                                        FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                                <Button Grid.Column="1"
                                        Command="{Binding #RootView.((vm:ContentLibraryViewModel)DataContext).DeleteContentCommand}"
                                        ToolTip.Tip="Delete Content"
                                        Classes="glass-icon-btn"
                                        Margin="0,0,0,10"
                                        VerticalAlignment="Top">
                                    <PathIcon Data="{StaticResource DeleteIcon}"
                                              Width="20" Height="20"
                                              Foreground="#FF6060"/>
                                </Button>
                            </Grid>

                            <Rectangle Height="1" Fill="#15FFFFFF"/>

                            <!-- Description -->
                            <StackPanel Spacing="10">
                                <TextBlock Text="Description"
                                           FontWeight="SemiBold"
                                           Foreground="#D0D0E0"
                                           FontSize="14"/>
                                <TextBlock Text="{Binding Description, FallbackValue=''}"
                                           TextWrapping="Wrap"
                                           Foreground="#DDDDDD"
                                           FontSize="14"
                                           LineHeight="22"/>
                            </StackPanel>

                            <!-- Bundled Items (for ContentBundle) -->
                            <Border Background="#10AAFF88"
                                    CornerRadius="12"
                                    BorderBrush="#20FFFFFF"
                                    BorderThickness="1"
                                    Padding="24"
                                    BoxShadow="0 4 16 0 #20000000"
                                    IsVisible="{Binding ContentType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=ContentBundle}">
                                <StackPanel Spacing="20">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Text="Bundled Items"
                                                   FontWeight="Bold"
                                                   FontSize="18"
                                                   Foreground="White"/>
                                        <Button Grid.Column="1"
                                                Command="{Binding #RootView.((vm:ContentLibraryViewModel)DataContext).AddBundledItemCommand}"
                                                Classes="accent-glass-btn">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <PathIcon Data="{StaticResource AddIcon}" Width="12" Height="12" Foreground="#AA00FF"/>
                                                <TextBlock Text="Add Item" Foreground="#AA00FF" FontWeight="Bold" FontSize="12"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>

                                    <ItemsControl ItemsSource="{Binding BundledItems}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="models:CatalogDependency">
                                                <Border Background="#0FFFFFFF"
                                                        CornerRadius="8"
                                                        Padding="16"
                                                        Margin="0,0,0,12"
                                                        BorderThickness="1"
                                                        BorderBrush="#15FFFFFF">
                                                    <Grid ColumnDefinitions="*,Auto">
                                                        <StackPanel Spacing="4">
                                                            <TextBlock Text="{Binding ContentId}" FontWeight="Bold" Foreground="White"/>
                                                            <TextBlock Text="{Binding PublisherId}" FontSize="12" Opacity="0.6"/>
                                                        </StackPanel>
                                                        <Button Grid.Column="1"
                                                                Command="{Binding #RootView.((vm:ContentLibraryViewModel)DataContext).RemoveBundledItemCommand}"
                                                                CommandParameter="{Binding}"
                                                                Classes="glass-icon-btn">
                                                            <PathIcon Data="{StaticResource DeleteIcon}" Width="14" Height="14" Foreground="#FF6060"/>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!-- Releases Section -->
                            <Border Background="#10AA88FF"
                                    CornerRadius="12"
                                    BorderBrush="#20FFFFFF"
                                    BorderThickness="1"
                                    Padding="24"
                                    BoxShadow="0 4 16 0 #20000000">
                                <StackPanel Spacing="20">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Text="Releases"
                                                   FontWeight="Bold"
                                                   FontSize="18"
                                                   Foreground="White"/>
                                         <Button Grid.Column="1"
                                                 Command="{Binding #RootView.((vm:ContentLibraryViewModel)DataContext).AddReleaseCommand}"
                                                 Classes="accent-glass-btn">
                                             <StackPanel Orientation="Horizontal" Spacing="8">
                                                 <PathIcon Data="{StaticResource AddIcon}" Width="12" Height="12" Foreground="#AA00FF"/>
                                                 <TextBlock Text="Add Release" Foreground="#AA00FF" FontWeight="Bold" FontSize="12"/>
                                             </StackPanel>
                                         </Button>
                                    </Grid>

                                    <!-- Release List -->
                                    <ItemsControl ItemsSource="{Binding Releases, FallbackValue={x:Null}}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="models:ContentRelease">
                                                <Expander Margin="0,0,0,12">
                                                    <Expander.Styles>
                                                        <Style Selector="Expander">
                                                            <Setter Property="Background" Value="#0FFFFFFF"/>
                                                            <Setter Property="BorderBrush" Value="#15FFFFFF"/>
                                                            <Setter Property="BorderThickness" Value="1"/>
                                                            <Setter Property="CornerRadius" Value="8"/>
                                                            <Setter Property="Padding" Value="16"/>
                                                        </Style>
                                                        <Style Selector="Expander:expanded">
                                                            <Setter Property="Background" Value="#12FFFFFF"/>
                                                        </Style>
                                                    </Expander.Styles>
                                                    <Expander.Header>
                                                        <Grid ColumnDefinitions="*,Auto" MinWidth="500">
                                                            <StackPanel Spacing="4">
                                                                <StackPanel Orientation="Horizontal" Spacing="10">
                                                                    <TextBlock Text="{Binding Version, StringFormat='v{0}'}"
                                                                               FontWeight="Bold"
                                                                               FontSize="16"
                                                                               Foreground="White"/>
                                                                    <Border IsVisible="{Binding IsLatest}"
                                                                            Background="#2000FF00"
                                                                            CornerRadius="4"
                                                                            Padding="8,2"
                                                                            BorderBrush="#4000FF00"
                                                                            BorderThickness="1">
                                                                        <TextBlock Text="Latest"
                                                                                   FontSize="10"
                                                                                   Foreground="#40FF40"
                                                                                   FontWeight="Bold"/>
                                                                    </Border>
                                                                    <Border IsVisible="{Binding IsPrerelease}"
                                                                            Background="#20FFA500"
                                                                            CornerRadius="4"
                                                                            Padding="8,2"
                                                                            BorderBrush="#40FFA500"
                                                                            BorderThickness="1">
                                                                        <TextBlock Text="Pre-release"
                                                                                   FontSize="10"
                                                                                   Foreground="#FFA500"
                                                                                   FontWeight="Bold"/>
                                                                    </Border>
                                                                </StackPanel>
                                                                <TextBlock FontSize="13" Foreground="#AAAAAA">
                                                                    <Run Text="{Binding ReleaseDate, StringFormat='{}{0:MMM d, yyyy}'}"/>
                                                                    <Run Text=" â€¢ "/>
                                                                    <Run Text="{Binding Artifacts.Count}"/>
                                                                    <Run Text=" artifacts"/>
                                                                </TextBlock>
                                                            </StackPanel>
                                                            <Button Grid.Column="1"
                                                                    Command="{Binding #RootView.((vm:ContentLibraryViewModel)DataContext).DeleteReleaseCommand}"
                                                                    CommandParameter="{Binding}"
                                                                    ToolTip.Tip="Delete Release"
                                                                    Background="Transparent"
                                                                    Padding="8"
                                                                    CornerRadius="6">
                                                                <PathIcon Data="{StaticResource DeleteIcon}" Width="16" Height="16" Foreground="#FF6060"/>
                                                            </Button>
                                                        </Grid>
                                                    </Expander.Header>
                                                    <StackPanel Margin="0,12,0,0" Spacing="16">
                                                        <!-- Changelog -->
                                                        <StackPanel Spacing="4" IsVisible="{Binding Changelog, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                                            <TextBlock Text="Changelog" FontWeight="SemiBold" FontSize="12" Foreground="#888888"/>
                                                            <TextBlock Text="{Binding Changelog}" TextWrapping="Wrap" Foreground="#CCCCCC" FontSize="13"/>
                                                        </StackPanel>

                                                        <!-- Artifacts List -->
                                                        <StackPanel Spacing="8">
                                                            <TextBlock Text="Artifacts" FontWeight="SemiBold" FontSize="12" Foreground="#888888"/>
                                                            <ItemsControl ItemsSource="{Binding Artifacts}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Border Background="#08FFFFFF" CornerRadius="6" Padding="12,8" Margin="0,0,0,6">
                                                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                                                <PathIcon Data="{StaticResource DownloadIcon}" Width="14" Height="14" Foreground="#AA00FF" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                                                                <StackPanel Grid.Column="1" Spacing="2">
                                                                                    <TextBlock Text="{Binding Filename}" FontWeight="SemiBold" Foreground="White" FontSize="13"/>
                                                                                    <TextBlock Text="{Binding DownloadUrl}" FontSize="11" Foreground="#666666" TextTrimming="CharacterEllipsis"/>
                                                                                </StackPanel>
                                                                                <TextBlock Grid.Column="2" Text="{Binding Size}" FontSize="11" Foreground="#888888" VerticalAlignment="Center"/>
                                                                            </Grid>
                                                                        </Border>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                            <TextBlock Text="No artifacts added" FontSize="12" Foreground="#555555" IsVisible="{Binding !Artifacts.Count}"/>
                                                        </StackPanel>

                                                        <!-- Dependencies List -->
                                                        <StackPanel Spacing="8" IsVisible="{Binding Dependencies.Count}">
                                                            <TextBlock Text="Dependencies" FontWeight="SemiBold" FontSize="12" Foreground="#888888"/>
                                                            <ItemsControl ItemsSource="{Binding Dependencies}">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Border Background="#08FFFFFF" CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                                                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                                                <TextBlock Text="{Binding PublisherId}" Foreground="#888888" FontSize="12"/>
                                                                                <TextBlock Text="/" Foreground="#444444"/>
                                                                                <TextBlock Text="{Binding ContentId}" FontWeight="SemiBold" Foreground="White" FontSize="12"/>
                                                                                <TextBlock Text="{Binding VersionConstraint}" Foreground="#AA00FF" FontSize="12"/>
                                                                            </StackPanel>
                                                                        </Border>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Expander>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ContentControl.ContentTemplate>
            </ContentControl>
        </ScrollViewer>

        <!-- No Selection State -->
        <StackPanel Grid.Column="1"
                    IsVisible="{Binding SelectedContent, Converter={x:Static ObjectConverters.IsNull}}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="24">
            <Border Width="100" Height="100" CornerRadius="50" Background="#08FFFFFF" BorderBrush="#15FFFFFF" BorderThickness="1">
                <PathIcon Data="{StaticResource ContentIcon}"
                          Width="50" Height="50"
                          Foreground="#20FFFFFF"
                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <TextBlock Text="Select a content item to view details"
                       FontSize="18"
                       Foreground="#40FFFFFF"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
