<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GenHub.Features.Content.ViewModels.Catalog"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="550"
        x:Class="GenHub.Features.Downloads.Views.SubscriptionConfirmationDialog"
        x:DataType="vm:SubscriptionConfirmationViewModel"
        Title="Subscription Confirmation"
        Width="450" Height="550"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="Full"
        Background="{DynamicResource WindowBackgroundDark}"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1">

    <Window.Resources>
        <!-- Deep Purple Nebula Background -->
        <LinearGradientBrush x:Key="PurpleNebulaBackground" StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Color="#0F0B1A" Offset="0" />
            <GradientStop Color="#1A122E" Offset="0.5" />
            <GradientStop Color="#0F0B1A" Offset="1" />
        </LinearGradientBrush>

        <!-- Accent Gradient for Buttons -->
        <LinearGradientBrush x:Key="AccentGradient" StartPoint="0%,0%" EndPoint="100%,100%">
            <GradientStop Color="#D56AFF" Offset="0" />
            <GradientStop Color="#7838F5" Offset="1" />
        </LinearGradientBrush>
    </Window.Resources>

    <Panel Background="{StaticResource PurpleNebulaBackground}">
        <!-- Window Drag Region -->
        <Panel Height="30" VerticalAlignment="Top" Background="Transparent" IsHitTestVisible="False"/>

        <Border BorderBrush="#25FFFFFF" BorderThickness="1" CornerRadius="12" Margin="10">
            <Grid RowDefinitions="Auto, *, Auto" Margin="20">
                <!-- Header -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,20">
                    <TextBlock Text="Confirm Subscription"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Do you want to add this publisher to your library?"
                               FontSize="14"
                               Foreground="#D0D0E0"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0" />
                </StackPanel>

                <!-- Content -->
                <Panel Grid.Row="1">
                    <!-- Loading State -->
                    <StackPanel IsVisible="{Binding IsLoading}" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True"
                                     Foreground="#D56AFF"
                                     Width="200"
                                     Height="4"
                                     HorizontalAlignment="Center" />
                        <TextBlock Text="Fetching publisher details..."
                                   Foreground="#AAAAAA"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0" />
                    </StackPanel>

                    <!-- Error State -->
                    <StackPanel IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                VerticalAlignment="Center"
                                Margin="10">
                        <TextBlock Text="⚠ Error"
                                   Foreground="#FF5555"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="#FF9999"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,10,0,0" />
                    </StackPanel>

                    <!-- Details State -->
                    <ScrollViewer IsVisible="{Binding !IsLoading}">
                        <StackPanel Spacing="15" Margin="10">
                            <!-- Avatar/Logo -->
                            <Border Width="120" Height="120"
                                    CornerRadius="60"
                                    BorderBrush="#D56AFF"
                                    BorderThickness="2"
                                    ClipToBounds="True"
                                    HorizontalAlignment="Center"
                                    Background="#1A122E">
                                <Image Source="{Binding PublisherAvatarUrl, TargetNullValue={x:Null}}"
                                       Stretch="UniformToFill" />
                            </Border>

                            <!-- Info -->
                            <StackPanel Spacing="5">
                                <TextBlock Text="{Binding PublisherName}"
                                           FontSize="22"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           HorizontalAlignment="Center" />
                                <TextBlock Text="{Binding PublisherWebsite}"
                                           FontSize="13"
                                           Foreground="#D56AFF"
                                           HorizontalAlignment="Center" />
                            </StackPanel>

                            <Separator Background="#25FFFFFF" Margin="0,10" />

                            <StackPanel Spacing="5">
                                <TextBlock Text="Catalog URL"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#888888" />
                                <TextBlock Text="{Binding UrlDisplay}"
                                           FontSize="12"
                                           Foreground="#CCCCCC"
                                           TextWrapping="Wrap" />
                            </StackPanel>

                            <Border Background="#20FFB74D" BorderBrush="#80FFB74D" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,10,0,0">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="⚠" Foreground="#FFB74D" FontSize="20" VerticalAlignment="Center" />
                                    <TextBlock Text="Trust notice: Only subscribe to publishers you trust. Catalogs can contain external download links."
                                               Foreground="#FFB74D"
                                               FontSize="11"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center"
                                               Width="280" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Panel>

                <!-- Footer Buttons -->
                <UniformGrid Grid.Row="2" Columns="2" Margin="0,20,0,0">
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Background="#15FFFFFF"
                            BorderBrush="#25FFFFFF"
                            BorderThickness="1"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Margin="0,0,5,0"
                            Padding="12"
                            CornerRadius="8" />
                    <Button Content="Subscribe"
                            Command="{Binding ConfirmCommand}"
                            IsEnabled="{Binding CanConfirm}"
                            Background="{StaticResource AccentGradient}"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Margin="5,0,0,0"
                            Padding="12"
                            CornerRadius="8"
                            FontWeight="SemiBold"
                            BorderThickness="0" />
                </UniformGrid>
            </Grid>
        </Border>
    </Panel>
</Window>
