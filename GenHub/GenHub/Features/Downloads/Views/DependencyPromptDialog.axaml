<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GenHub.Features.Downloads.ViewModels"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        x:Class="GenHub.Features.Downloads.Views.DependencyPromptDialog"
        x:DataType="vm:DependencyPromptViewModel"
        Title="Missing Dependencies"
        Width="500" Height="450"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        SystemDecorations="Full">

    <Panel>
        <!-- Background Overlay for Glassmorphism -->
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="0.8"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Border BorderBrush="#444444" BorderThickness="1" CornerRadius="12" Margin="10">
            <Grid RowDefinitions="Auto,*,Auto" Margin="20">
                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,10,0,20">
                    <Grid ColumnDefinitions="Auto,*">
                        <TextBlock Text="âš "
                                   FontSize="32"
                                   Foreground="#FFB74D"
                                   VerticalAlignment="Center"
                                   Margin="0,0,15,0" />
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Missing Dependencies"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="White" />
                            <TextBlock Text="{Binding ContentName, StringFormat='{}{0} requires additional content to function properly.'}"
                                       FontSize="13"
                                       Foreground="#AAAAAA"
                                       TextWrapping="Wrap"
                                       Margin="0,5,0,0" />
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Content -->
                <ScrollViewer Grid.Row="1" Margin="0,0,0,10">
                    <StackPanel Spacing="15" Margin="5">
                        <!-- Summary -->
                        <Border Background="#332211" BorderBrush="#664422" BorderThickness="1" CornerRadius="8" Padding="15">
                            <StackPanel Spacing="5">
                                <TextBlock Text="{Binding SummaryText}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#FFB74D" />
                                <TextBlock Text="Would you like to install these dependencies automatically?"
                                           FontSize="12"
                                           Foreground="#AAAAAA"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>

                        <!-- Dependencies List -->
                        <Border Background="#222222" BorderBrush="#333333" BorderThickness="1" CornerRadius="8" Padding="0">
                            <StackPanel Margin="0">
                                <TextBlock Text="Required Dependencies"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#888888"
                                           Margin="15,12,15,8" />

                                <ItemsControl ItemsSource="{Binding Dependencies}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#2A2A2A"
                                                    BorderBrush="#333333"
                                                    BorderThickness="0,0,0,1"
                                                    Padding="15,12">
                                                <Grid ColumnDefinitions="*,Auto,Auto">
                                                    <StackPanel Grid.Column="0" Spacing="3">
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontSize="13"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White" />
                                                        <TextBlock>
                                                            <Run Text="Version:" Foreground="#888888" FontSize="11" />
                                                            <Run Text="{Binding VersionConstraint}" Foreground="#AAAAAA" FontSize="11" />
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <Border Grid.Column="1"
                                                            Background="#1A3A1A"
                                                            CornerRadius="4"
                                                            Padding="8,4"
                                                            Margin="10,0,5,0"
                                                            IsVisible="{Binding CanAutoInstall}">
                                                        <TextBlock Text="{Binding Status}"
                                                                   FontSize="10"
                                                                   Foreground="#4CAF50" />
                                                    </Border>

                                                    <Border Grid.Column="2"
                                                            Background="#3A1A1A"
                                                            CornerRadius="4"
                                                            Padding="8,4"
                                                            Margin="5,0,0,0"
                                                            IsVisible="{Binding IsOptional}">
                                                        <TextBlock Text="OPTIONAL"
                                                                   FontSize="10"
                                                                   Foreground="#FF5252"
                                                                   FontWeight="Bold" />
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Empty State -->
                                <TextBlock Text="No missing dependencies"
                                           FontSize="12"
                                           Foreground="#888888"
                                           HorizontalAlignment="Center"
                                           Margin="15,20"
                                           IsVisible="{Binding Dependencies, Converter={x:Static ObjectConverters.IsNull}}" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer Buttons -->
                <StackPanel Grid.Row="2" Spacing="10">
                    <!-- Primary Action -->
                    <Button Content="Install All Dependencies"
                            Command="{Binding InstallAllCommand}"
                            IsEnabled="{Binding CanAutoInstallAll}"
                            Background="#9C27B0"
                            Foreground="White"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Padding="14"
                            CornerRadius="8"
                            FontWeight="SemiBold" />

                    <!-- Secondary Actions -->
                    <UniformGrid Columns="2" Margin="0">
                        <Button Content="Skip Dependencies"
                                Command="{Binding SkipDependenciesCommand}"
                                Background="#404040"
                                Foreground="White"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Margin="0,0,5,0"
                                Padding="12"
                                CornerRadius="8" />
                        <Button Content="Cancel Download"
                                Command="{Binding CancelCommand}"
                                Background="#404040"
                                Foreground="#AA6666"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Margin="5,0,0,0"
                                Padding="12"
                                CornerRadius="8" />
                    </UniformGrid>
                </StackPanel>
            </Grid>
        </Border>
    </Panel>
</Window>
